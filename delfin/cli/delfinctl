    func = switcher.get(args.operation, None)
    if func is None:
        raise Exception('Invalid operation: ' + args.operation)

    ret = func(args)
    if ret is not None:
        print(ret)


def sync_api(args):
    switcher = {
        "all": sync_all,
        "storage": sync_all,
    }

    func = switcher.get(args.operation, None)
    if func is None:
        raise Exception('Invalid operation: ' + args.operation)

    ret = func(args)
    if ret is not None:
        print(ret)


