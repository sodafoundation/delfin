    switcher = {
        "get": get_access_info,
        "update": update_access_info,
    }

    func = switcher.get(args.operation, None)
    if func is None:
        raise Exception('Invalid operation: ' + args.operation)

    ret = func(args)
    if ret is not None:
        print(ret)


